<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivLine"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_4sdp"
        android:layout_gravity="center"
        android:src="@drawable/ic_line"
        android:layout_marginVertical="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/tvLogOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_logout"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginHorizontal="@dimen/_16sdp"
        style="@style/TVSemiBold"
        app:layout_constraintTop_toBottomOf="@+id/ivLine"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout MySocial"
        android:id="@+id/aboutDialogAppName"
        android:gravity="center"
        android:textColor="@color/black"
        android:singleLine="true"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@+id/tvLogOut"
       />

    <TextView
        android:id="@+id/tvSure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/msg_action_logout"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginHorizontal="@dimen/_16sdp"
        style="@style/TVRegular"
        app:layout_constraintTop_toBottomOf="@+id/aboutDialogAppName"
        />


    <TextView
        android:id="@+id/tvNo"
        android:layout_width="0dp"
        android:layout_height="@dimen/_35sdp"
        android:text="No"
        style="@style/TVSemiBold"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        android:gravity="center"
        android:background="@drawable/button_white"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginVertical="@dimen/_25sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_gravity="center_vertical"
        app:layout_constraintEnd_toStartOf="@+id/tvYes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSure"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvYes"
        android:layout_width="0dp"
        android:layout_height="@dimen/_35sdp"
        android:text="Yes"
        style="@style/TVSemiBold"
        android:textSize="@dimen/_12sdp"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/bg_gredient"
        android:layout_marginVertical="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/tvSure"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvNo"/>

</androidx.constraintlayout.widget.ConstraintLayout>