<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivLine"
        android:src="@drawable/ic_line"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_5sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAddFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addFile"
        style="@style/TVSemiBold"
        android:textSize="@dimen/_12sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginVertical="@dimen/_15sdp"
        android:layout_gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/ivLine"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ivCamera"
        android:src="@drawable/ic_select_camera"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginVertical="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ivGallery"
        app:layout_constraintTop_toBottomOf="@+id/tvAddFile" />

    <ImageView
        android:id="@+id/ivGallery"
        android:src="@drawable/ic_gallery_select"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginVertical="@dimen/_15sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivCamera"
        app:layout_constraintTop_toBottomOf="@+id/tvAddFile" />

    <TextView
        android:id="@+id/tvCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/camera"
        style="@style/TVRegular"
        android:textSize="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivCamera"
        app:layout_constraintStart_toStartOf="@+id/ivCamera"
        app:layout_constraintEnd_toEndOf="@+id/ivCamera"/>

    <TextView
        android:id="@+id/tvGallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gallery"
        style="@style/TVRegular"
        android:textSize="@dimen/_12sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivGallery"
        app:layout_constraintStart_toStartOf="@+id/ivGallery"
        app:layout_constraintEnd_toEndOf="@+id/ivGallery"/>

</androidx.constraintlayout.widget.ConstraintLayout>