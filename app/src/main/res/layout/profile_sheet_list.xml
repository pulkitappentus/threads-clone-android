<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/spacing_medium"
    android:paddingTop="@dimen/spacing_medium">

    <ImageView
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_4sdp"
        android:src="@drawable/ic_line"
        android:layout_marginVertical="@dimen/_16sdp"
        android:layout_gravity="center_horizontal"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn_dialog"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:orientation="vertical">
        <com.balysv.materialripple.MaterialRippleLayout
            android:visibility="gone"
            style="@style/RippleStyleBlack"
            android:id="@+id/refresh_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_42sdp"
            android:paddingLeft="@dimen/spacing_middle"
            android:layout_marginTop="@dimen/_15sdp"
            android:paddingRight="@dimen/spacing_middle">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    android:padding="@dimen/spacing_large"
                    android:layout_gravity="end|center"
                    app:srcCompat="@drawable/ic_refresh" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_middle"
                    android:layout_marginRight="@dimen/spacing_middle"
                    android:layout_gravity="start|center"
                    android:text="@string/action_refresh"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/grey_90" />

            </FrameLayout>

        </com.balysv.materialripple.MaterialRippleLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1AA4A4A4"/>

        <com.balysv.materialripple.MaterialRippleLayout
            style="@style/RippleStyleBlack"
            android:id="@+id/edit_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_42sdp"
            android:paddingLeft="@dimen/spacing_middle"
            android:paddingRight="@dimen/spacing_middle">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    android:padding="@dimen/spacing_smlarge"
                    android:layout_gravity="end|center"
                    app:srcCompat="@drawable/ic_edits" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_middle"
                    android:layout_marginRight="@dimen/spacing_middle"
                    android:layout_gravity="start|center"
                    android:text="@string/action_profile_edit"
                    style="@style/TVMeadium"
                    android:textSize="@dimen/_12sdp"/>

            </FrameLayout>

        </com.balysv.materialripple.MaterialRippleLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1AA4A4A4"/>

        <com.balysv.materialripple.MaterialRippleLayout
            style="@style/RippleStyleBlack"
            android:id="@+id/gift_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_42sdp"
            android:paddingLeft="@dimen/spacing_middle"
            android:paddingRight="@dimen/spacing_middle">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    android:padding="@dimen/spacing_large"
                    android:layout_gravity="end|center"
                    app:srcCompat="@drawable/post_share" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_middle"
                    android:layout_marginRight="@dimen/spacing_middle"
                    android:layout_gravity="start|center"
                    android:text="@string/share"
                    style="@style/TVRegular"
                    android:textSize="@dimen/_12sdp"
                    />

            </FrameLayout>

        </com.balysv.materialripple.MaterialRippleLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1AA4A4A4"/>

        <com.balysv.materialripple.MaterialRippleLayout
            style="@style/RippleStyleBlack"
            android:id="@+id/block_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_42sdp"
            android:paddingLeft="@dimen/spacing_middle"
            android:paddingRight="@dimen/spacing_middle">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/block_icon"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_gravity="end|center"
                    android:padding="@dimen/spacing_large"
                    app:srcCompat="@drawable/ic_block" />

                <TextView
                    android:id="@+id/block_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_middle"
                    android:layout_marginRight="@dimen/spacing_middle"
                    android:layout_gravity="start|center"
                    android:text="@string/action_block"
                    style="@style/TVRegular"
                    android:textSize="@dimen/_12sdp"
                    />

            </FrameLayout>

        </com.balysv.materialripple.MaterialRippleLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1AA4A4A4"/>

        <com.balysv.materialripple.MaterialRippleLayout
            style="@style/RippleStyleBlack"
            android:id="@+id/report_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_42sdp"
            android:paddingLeft="@dimen/spacing_middle"
            android:paddingRight="@dimen/spacing_middle">

            <FrameLayout
                android:id="@+id/lyt_share"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    android:padding="@dimen/spacing_large"
                    android:layout_gravity="end|center"
                    app:srcCompat="@drawable/post_report" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_middle"
                    android:layout_marginRight="@dimen/spacing_middle"
                    android:layout_gravity="start|center"
                    android:text="@string/action_report"
                    style="@style/TVRegular"
                    android:textSize="@dimen/_12sdp"
                    />

            </FrameLayout>

        </com.balysv.materialripple.MaterialRippleLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn_dialog"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:orientation="vertical">

        <com.balysv.materialripple.MaterialRippleLayout
            style="@style/RippleStyleBlack"
            android:id="@+id/copy_url_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_42sdp"
            android:paddingLeft="@dimen/spacing_middle"
            android:paddingRight="@dimen/spacing_middle">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    android:padding="@dimen/spacing_large"
                    android:layout_gravity="end|center"
                    app:srcCompat="@drawable/ic_copy_link" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_middle"
                    android:layout_marginRight="@dimen/spacing_middle"
                    android:layout_gravity="start|center"
                    android:text="@string/action_copy_url"
                    style="@style/TVRegular"
                    android:textSize="@dimen/_12sdp"
                    />

            </FrameLayout>

        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:visibility="gone"
            style="@style/RippleStyleBlack"
            android:id="@+id/open_url_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_42sdp"
            android:paddingLeft="@dimen/spacing_middle"
            android:paddingRight="@dimen/spacing_middle">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    android:padding="@dimen/spacing_large"
                    android:layout_gravity="end|center"
                    app:srcCompat="@drawable/ic_web" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_middle"
                    android:layout_marginRight="@dimen/spacing_middle"
                    android:text="@string/action_open_url"
                    android:layout_gravity="start|center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/grey_90" />

            </FrameLayout>

        </com.balysv.materialripple.MaterialRippleLayout>
    </LinearLayout>





</LinearLayout>