<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PhotoViewTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">
        <item name="android:spinnerItemStyle">@style/MooSpinnerItem</item>
    </style>

    <style name="Theme.social" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/blue</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!-- Status bar color. -->

        <!-- Customize your theme here. -->
    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="PreferenceScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/_12ssp</item>
       <!-- <item name="colorPrimary">#ff0000</item>
        <item name="colorPrimaryDark">#ff0000</item>-->
        <item name="colorAccent">@color/blue</item>
    </style>

    <!-- Spinner text color -->

    <style name="MooSpinnerItem" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/MooTextAppearanceSpinnerItem</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="MooTextAppearanceSpinnerItem" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- ActionBar styles -->
    <!--<style name="AppActionBar2"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/actionbar_bg</item>

        &lt;!&ndash; Support library compatibility &ndash;&gt;
        <item name="background">@color/actionbar_bg</item>
    </style>-->
    <style name="MyMaterialTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="MyMaterialTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyRippleStyleLight">
        <item name="mrl_rippleAlpha">0.2</item>
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#C0FFFAFF</item>
        <item name="mrl_rippleDelayClick">true</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleDuration">200</item>
    </style>

    <style name="MyRippleStyleDark" parent="MyRippleStyleLight">
        <item name="mrl_rippleColor">#809EA1A3</item>
    </style>

    <style name="RippleStyleBlack" parent="RippleStyleWhite">
        <item name="mrl_rippleColor">#809EA1A3</item>
        <item name="mrl_rippleDuration">200</item>
        <!--<item name="mrl_rippleDelayClick">true</item>-->
    </style>

    <style name="RippleStyleWhite">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#80FFFFFF</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>

    <style name="TVBold">
        <item name="android:fontFamily">@font/satoshi_bold</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="background">@null</item>
    </style>

    <style name="TVMeadium">
        <item name="android:fontFamily">@font/satoshi_medium</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="background">@null</item>
    </style>

    <style name="TVRegular">
        <item name="android:fontFamily">@font/satoshi_regular</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="background">@null</item>
    </style>

    <style name="TVSemiBold">
        <item name="android:fontFamily">@font/satoshi_bold</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="background">@null</item>
    </style>

    <style name="ETRegular">
        <item name="android:fontFamily">@font/satoshi_regular</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="hintTextColor">@color/grey_20</item>
        <item name="background">@null</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/round_shap_dialog</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <!-- added for version 4.7 -->

    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="color">@color/grey_40</item>
    </style>

    <style name="ToolbarHomeStyle" parent="@style/MyMaterialTheme">
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
        <item name="popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/grey_60</item>
    </style>

    <style name="DrawerStyle" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="colorControlHighlight">#00000000</item>
    </style>

    <style name="TextAppearance.Subhead.Bold" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- added for version 4.9 -->

    <style name="CommentsDialogStyle">
        <item name="android:windowIsFloating">false</item>
    </style>

</resources>